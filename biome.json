{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!node_modules", "!.next", "!dist", "!build"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "bracketSameLine": true,
    "expand": "auto"
  },
  "linter": {
    "enabled": true,

    "rules": {
      "recommended": true,
      "complexity": "warn",
      "correctness": "warn",
      "a11y": "info",
      "performance": "warn",
      "security": "error",
      "style": {
        "recommended": true
      },
      "suspicious": {
        "noUnknownAtRules": "off"
      }
    },
    "domains": {
      "next": "all",
      "react": "recommended"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on",
        "useSortedProperties": "on",
        "recommended": true
      }
    }
  }
}
